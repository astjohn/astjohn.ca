<article class='blog_comment_message' id="comment-<%= comment.to_param %>" class="clearfix">
  <table>
    <tr>
      <td class="avatar"><%= image_tag comment.avatar_url, :alt => comment.name, :class => 'avatar' %></td>
      <td>
        <footer class='blog_comment_author'>
          <div class="name_details"><%= comment.name %><span class="says">says:</span></div>
          <span class="time">(<%= t('time_ago', :scope => 'blog.posts.comments', :time => time_ago_in_words(comment.created_at)) %>)</span>
        </footer>
        <%= simple_format auto_link(comment.message.to_s) %>
      </td>
    </tr>
  </table>
</article>

